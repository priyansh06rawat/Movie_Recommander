modules = ["java", "java-latest"]

[nix]
channel = "stable-24_05"
packages = ["maven", "openjdk", "imagemagick"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "JavaFX Movie Recommender"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "java_application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Movie Recommender Maven Run"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Favorites Tester"

[[workflows.workflow]]
name = "JavaFX Movie Recommender"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean javafx:run"
waitForPort = 5000

[[workflows.workflow]]
name = "java_application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "java -cp .:target/classes:target/dependency/* com.movierecommender.Main"

[[workflows.workflow]]
name = "Movie Recommender Maven Run"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean javafx:run"

[[workflows.workflow]]
name = "Favorites Tester"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean compile exec:java -Dexec.mainClass=\"com.movierecommender.FavoritesApiTester\""

[deployment]
run = ["sh", "-c", "mvn clean javafx:run"]
