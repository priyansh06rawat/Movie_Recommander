modules = ["java"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "JavaFX Movie Recommender"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "java_application"

[[workflows.workflow]]
name = "JavaFX Movie Recommender"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn clean javafx:run"
waitForPort = 5000

[[workflows.workflow]]
name = "java_application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "java -cp .:target/classes:target/dependency/* com.movierecommender.Main"

[deployment]
run = ["sh", "-c", "mvn clean javafx:run"]
